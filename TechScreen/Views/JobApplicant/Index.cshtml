                                    <div class="col-md-3 text-center"> <i class="fas fa-handshake fa-3x"></i> </div>
                                    <div class="col-md-9">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                Thank the interviewer for his
                                                or her time
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-sm-8 text-center bg-success center-block py-1">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                                <label class="form-check-label" for="inlineCheckbox1">I agree with TechScreen360 Terms and conditions.</label>
                            </div>
                        </div>
                    </div>
                            <div class="row my-1">
                                <div class="col-sm-8 text-center bg-success center-block py-1">
                                    <form asp-action="VerifyCandidateCode" class="form-inline login-form">

                                        <label class=" " for="email-login">Login : </label>
                                        <input type="text" asp-for="CandidateSignInCode" class="form-control form-control-lg" placeholder="Please Enter Your SingnIn Code">
                                        <button type="submit" class="btn btn-outline-success ">Login</button>
                                        <label style="color:red">@ViewBag.InvalidCandidateCode</label>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
